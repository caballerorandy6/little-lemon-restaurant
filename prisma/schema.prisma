generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  reservations Reservation[]
  reviews   Review[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Reservation {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  date       DateTime
  time       String
  guests     Int
  createdAt  DateTime  @default(now())
}

model MenuItem {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  reviews     Review[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Review {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  menuItem   MenuItem  @relation(fields: [menuItemId], references: [id])
  menuItemId Int
  rating     Int
  comment    String
  createdAt  DateTime  @default(now())
}

enum Role {
  ADMIN
  USER
}